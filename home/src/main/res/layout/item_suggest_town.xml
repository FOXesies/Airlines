<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_suggest"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/photo_town_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="8dp">

        <ImageView
            android:id="@+id/photo_town"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/music_1"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/town_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASsdfsdf"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/photo_town_card"
        android:layout_toEndOf="@+id/photo_town_card" />

    <TextView
        android:id="@+id/town_description"
        android:layout_width="match_parent"
        android:text="fsfsfs"
        android:textSize="14sp"
        android:textColor="@color/iconBack"
        android:layout_height="wrap_content"
        android:layout_below="@+id/town_title"
        android:layout_alignStart="@+id/town_title"
        android:layout_marginTop="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/town_description"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:background="@color/iconBack" />

</RelativeLayout>